<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondofigmanegroyazul"
    tools:context=".roadhogFragment">


    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="340dp"
        android:layout_height="326dp"
        android:background="@drawable/botonana"
        android:backgroundTint="#2e4465"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="320dp"
            app:alignContent="stretch"
            app:alignItems="stretch"
            app:flexDirection="row"
            app:flexWrap="wrap"
            app:justifyContent="center">

            <FrameLayout
                android:layout_width="283dp"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="283dp"
                    android:layout_height="86dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:background="@android:drawable/screen_background_dark"
                    android:backgroundTint="#2e4465"
                    android:gravity="center|center_vertical"
                    android:text="Chatarrera "
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="283dp"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="283dp"
                    android:layout_height="86dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:background="@android:drawable/screen_background_dark"
                    android:backgroundTint="#2e4465"
                    android:gravity="center_vertical"
                    android:text="La chatarrera de Roadhog dispara a corto alcance descargas de metralla esparcidas."
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="283dp"
                android:layout_height="78dp">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="283dp"
                    android:layout_height="107dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:background="@android:drawable/screen_background_dark"
                    android:backgroundTint="#2e4465"
                    android:gravity="center_vertical"
                    android:text="Como alternativa, también puede lanzar una bola de metralla que se detona más lejos y esparce fragmentos de metal desde el punto de impacto."
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />
            </FrameLayout>
        </com.google.android.flexbox.FlexboxLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>